<%- include('partials/header') %>

<div class="max-w-2xl mx-auto p-6">
  <h1 class="text-2xl font-bold mb-6">📜 Logs (Last 7 Days)</h1>

  <div class="mb-4">
    <a href="<%= currentLogPath %>" class="bg-green-600 text-white px-3 py-1 text-sm rounded hover:bg-green-700">
      🔍 View Current Log (system.log)
    </a>
  </div>

  <% if (logs.length === 0) { %>
    <p class="text-gray-500">No log files found.</p>
  <% } else { %>
    <ul class="space-y-3">
      <% logs.forEach(log => { %>
        <li class="flex justify-between items-center bg-white p-3 shadow rounded border">
          <span class="text-sm font-medium">🗓 <%= log.name %></span>
          <div class="space-x-2">
            <a href="<%= log.viewPath %>" class="bg-blue-600 text-white text-xs px-3 py-1 rounded hover:bg-blue-700">👁 View</a>
            <a href="<%= log.downloadPath %>" class="bg-gray-700 text-white text-xs px-3 py-1 rounded hover:bg-gray-800">⬇ Download</a>
          </div>
        </li>
      <% }); %>
    </ul>
  <% } %>
</div>

<%- include('partials/footer') %>